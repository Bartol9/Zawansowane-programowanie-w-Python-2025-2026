## zadanie 1

import math

L1 = float(input("Podaj liczbę a:"))
L2 = float(input("Podaj liczbę b:"))
print("suma:", float(L1 + L2))
print("różnica:", float(L1 - L2))
print("iloczyn:", float(L1 * L2))
print("iloraz", float(L1 / L2))
print(" √L1 + L2", math.sqrt(L1 + L2))

##zadanie 2

import random

# Wylosuj liczbę od 1 do 5
secret_number = random.randint(1, 5)

#Pętla gry, która trwa do momentu odgadnięcia liczby
while True:
    try:
        guess_str = input("Zgadnij liczbę od 1 do 5: ")
        user_guess = int(guess_str)

        if user_guess < 1 or user_guess > 5:
            print("Podaj liczbę w zakresie od 1 do 5.")
        elif user_guess == secret_number:
            print("Gratulacje! Zgadłeś!")
            break
        else:
            print("Przykro mi, to zła liczba. Spróbuj ponownie.")

    except ValueError:
        print("To nie jest poprawna liczba. Podaj liczbę całkowitą.")


##zadanie 3

import random
nums = [random.randint(2, 8) for _ in range(10)]
print("Początkowa lista:", nums)

# a) wypisanie wszystkich elementów listy wraz z indeksami
print("\n[a] Elementy listy z indeksami:")
for i, val in enumerate(nums):
    print(f"Indeks {i} -> {val}")

# b) usuwanie z listy nums liczb nieparzystych
nums_b = [x for x in nums if x % 2 == 0]
print("\n[b] Lista po usunięciu nieparzystych:", nums_b)

# c) zamiana wartości elementów nieparzystych na ich indeksy
nums_c = nums[:]  # kopia oryginalnej listy
for i, val in enumerate(nums_c):
    if val % 2 != 0:   # jeśli nieparzysta
        nums_c[i] = i
print("\n[c] Lista po zamianie nieparzystych na indeksy:", nums_c)

# d) usuwanie wszystkich wystąpień liczb 2 i 3
nums_d = [x for x in nums if x not in (2, 3)]
print("\n[d] Lista po usunięciu wszystkich 2 i 3:", nums_d)

# e) po każdej liczbie podzielnej przez 3 wstaw nowy element 15
nums_e = []
for x in nums:
    nums_e.append(x)
    if x % 3 == 0:
        nums_e.append(15)
print("\n[e] Lista po wstawieniu 15 po elementach podzielnych przez 3:", nums_e)


##zadanie 4
import random
import statistics
#generowanie 10-elementowej tupli
tnums = tuple(random.randint(2, 15) for _ in range(10))
print("Początkowa tupla:", tnums)

# a) wypisanie wszystkich elementów tupli wraz z indeksami
print("\n[a] Elementy tupli z indeksami:")
for i, val in enumerate(tnums):
    print(f"Indeks {i} -> {val}")

# b) średnie: arytmetyczna, geometryczna, harmoniczna
mean_ar = statistics.mean(tnums)
mean_geo = statistics.geometric_mean(tnums)
mean_har = statistics.harmonic_mean(tnums)

print("\n[b] Średnie z tupli:")
print(f"Średnia arytmetyczna: {mean_ar}")
print(f"Średnia geometryczna: {mean_geo}")
print(f"Średnia harmoniczna: {mean_har}")

# c) zlicz wszystkie wystąpienia liczby 3 i 5
count_3 = tnums.count(3)
count_5 = tnums.count(5)

print("\n[c] Liczba wystąpień:")
print(f"3 → {count_3} razy")
print(f"5 → {count_5} razy")

##zadanie 5
# lista przedmiotów
sub = ["mat", "stat", "ang", "python", "BI", "ML", "AI", "SQL"]

# lista studentów (imiona)
names = ["Ania", "Kasia", "Marek", "Franek", "Zosia", "Magda", "Adam", "Michał"]

# lista ID (tyle samo elementów co names)
ids = list(range(23222, 23222 + len(names)))
print(ids)

group = [
    (ids[i], names[i], random.sample(sub, k=random.randint(1, len(sub))))
    for i in range(len(names))
]
print("Grupa studentów:")
for student in group:
    print(student)


##zadanie 6
import string

# duże litery alfabetu
letters = list(string.ascii_uppercase)

# wyrażenie listowe grupujące co 5 liter
groups5 = [letters[i:i+5] for i in range(0, len(letters), 5)]
print(groups5)

letters = list(string.ascii_uppercase)
lista_licznosci = [3, 4, 5, 2, 7, 5]   # przykładowy podział

#B
groups_custom = [letters[sum(lista_licznosci[:i]): sum(lista_licznosci[:i+1])]
                 for i in range(len(lista_licznosci))]

print(groups_custom)
#C
pairs = [(x, y) for x in range(1, 10) if x % 2 == 0
                 for y in range(1, 10) if y % 2 != 0]

print(pairs)



##zadanie 7
student_grades = [("Alice", 5), ("Bob", 4), ("Eve", 3), ("AAA", "BBB")]

# tworzymy słownik, odrzucając wartości nieliczbowe
grades_dict = {name: grade for name, grade in student_grades if isinstance(grade, (int, float))}

print("Słownik ocen:", grades_dict)




##zadanie 8
# dane
smak = ["śmietankowe", "pistacjowe", "truskawkowe", "jagodowe", "cytrynowe"]
rozmiar = ["duże", "małe"]
dodatek = ["polewa czekoladowa", "polewa karmelowa", "posypka czekoladowa", "posypka kolorowa"]

# zbiór wszystkich możliwych kombinacji
lody = {(r, s, d) for r in rozmiar for s in smak for d in dodatek}

print("Wszystkie kombinacje lodów (rozmiar, smak, dodatek):")
for l in lody:
    print(l)

print("\nLiczba wszystkich kombinacji:", len(lody))